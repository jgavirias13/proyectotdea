{{>header}}

<div class="container">
    {{{mensajeError}}}
    <div class="row">
        <div class="col-md-12">
            <h3>Editar Usuario</h3>
            <form action="/editarUsuario" method="POST">
                <input type="hidden" id="documento" name="documento" value="{{usuario.documento}}">
                <div class="form-group row">
                    <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre" name="nombre"
                            placeholder="Tu nombre completo" required="true" value="{{usuario.nombre}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="correo" class="col-sm-2 col-form-label">Correo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="correo" name="correo"
                            placeholder="Tu correo electronico" required="true" value="{{usuario.correo}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="telefono" class="col-sm-2 col-form-label">Telefono</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="telefono" name="telefono"
                            placeholder="Tu telefono celular" required="true" value="{{usuario.telefono}}">
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar"/>
                </div>
                <div class="form-group">
                    <a href="/administrarUsuarios">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

{{>footer}}